<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Budgeting App"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:padding="10dp" />

    <EditText
        android:id="@+id/goal_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your goal amount"
        android:inputType="numberDecimal"
        android:padding="10dp" />

    <EditText
        android:id="@+id/savings_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your current savings"
        android:inputType="numberDecimal"
        android:padding="10dp" />

    <Button
        android:id="@+id/calculate_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:padding="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You need to save: $0.00"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:padding="10dp" />

    <Button
        android:id="@+id/notify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Weekly Notifications"
        android:padding="10dp"
        android:layout_marginTop="10dp" />
</LinearLayout>
